# Database configuration
DB_TYPE=sqlite             # Required: 'mongodb' or 'sqlite'
MONGODB_URI=mongodb://localhost:27017/linksimplify  # Only required if DB_TYPE=mongodb
SQLITE_PATH=./data/linksimplify.db    # Optional: Path for SQLite database file

# Server configuration
PORT=3000                  # Optional: Port for the server

# Security
JWT_SECRET=your_secure_jwt_secret_key  # Must be set: Secret key for JWT signing
JWT_EXPIRES_IN=1h          # Optional: JWT token expiration time

# URL configuration
URL_LENGTH=6               # Optional: Default length of generated short URLs